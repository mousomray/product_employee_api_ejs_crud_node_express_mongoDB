<!DOCTYPE html>
<html lang="en">
  <%- include('../common/head.ejs') %>
  <body>
    <%- include('../common/navbar.ejs') %>

    <!-- Flash Messages -->
    <% if (sucess && sucess != '') { %>
      <div
        class="alert alert-success"
        role="alert"
        style="
          position: absolute;
          top: 50px;
          left: 50%;
          transform: translateX(-50%);
          width: 50%;
          text-align: center;
          background-color: #d4edda;
          color: #155724;
          border: 1px solid #c3e6cb;
          border-radius: 5px;
          padding: 10px;
          z-index: 1000;
        "
      >
        <%= sucess %>
      </div>
      <% } else if (err && err != '') { %>
      <div
        class="alert alert-danger"
        role="alert"
        style="
          position: absolute;
          top: 100px;
          left: 50%;
          transform: translateX(-50%);
          width: 50%;
          text-align: center;
          background-color: #f8d7da;
          color: #721c24;
          border: 1px solid #f5c6cb;
          border-radius: 5px;
          padding: 10px;
          z-index: 1000;
        "
      >
        <%= err %>
      </div>
      <% } %>

    <div
      class="container mt-5"
      style="
        max-width: 600px;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      "
    >
      <h2 class="mb-4 text-center" style="color: #343a40">Add New Product</h2>
      <form action="/addproductcreate" method="POST" enctype="multipart/form-data">
        <!-- Product Name -->
        <div class="form-group">
          <label for="p_name" style="font-weight: bold; color: #495057"
            >Product Name</label
          >
          <input
            type="text"
            class="form-control"
            id="p_name"
            name="p_name"
            required
            minlength="3"
            placeholder="Enter product name"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >Product name must be at least 3 characters.</small
          >
        </div>

        <!-- Product Sizes (Array of Sizes) -->
        <div class="form-group">
          <label for="p_size" style="font-weight: bold; color: #495057"
            >Product Sizes (comma-separated)</label
          >
          <input
            type="text"
            class="form-control"
            id="p_size"
            name="p_size"
            required
            minlength="5"
            placeholder="Enter product sizes, e.g., Small, Medium, Large"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >Each size must be at least 3 characters.</small
          >
        </div>

        <!-- Product Colors (Array of Colors) -->
        <div class="form-group">
          <label for="p_color" style="font-weight: bold; color: #495057"
            >Product Colors (comma-separated)</label
          >
          <input
            type="text"
            class="form-control"
            id="p_color"
            name="p_color"
            required
            minlength="5"
            placeholder="Enter product colors, e.g., Red, Blue, Green"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >Each color must be at least 3 characters.</small
          >
        </div>

        <!-- Product Brand -->
        <div class="form-group">
          <label for="brand" style="font-weight: bold; color: #495057"
            >Brand</label
          >
          <input
            type="text"
            class="form-control"
            id="brand"
            name="brand"
            required
            minlength="3"
            placeholder="Enter product brand"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >Brand must be at least 3 characters.</small
          >
        </div>

        <!-- Price -->
        <div class="form-group">
          <label for="price" style="font-weight: bold; color: #495057"
            >Price ($)</label
          >
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            required
            placeholder="Enter product price"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
        </div>

        <!-- Image URL -->
        <div class="form-group">
          <label for="image" style="font-weight: bold; color: #495057"
            >Image URL</label
          >
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            accept="image/*"
            placeholder="Enter image URL"
            value="https://t3.ftcdn.net/jpg/05/25/55/06/360_F_525550698_pcSOrKvA81oMHeEgI1e6MJHn1NIzWREd.jpg"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >If left empty, a default image will be used.</small
          >
        </div>

        <!-- Product Description -->
        <div class="form-group">
          <label for="p_description" style="font-weight: bold; color: #495057"
            >Product Description</label
          >
          <input
            type="text"
            class="form-control"
            id="p_description"
            name="p_description"
            required
            minlength="10"
            placeholder="Enter product description"
            style="border: 1px solid #ced4da; border-radius: 5px; padding: 10px"
          />
          <small
            class="form-text text-muted"
            style="font-size: 12px; color: red"
            >Product description must be at least 10 characters.</small
          >
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="btn btn-primary btn-block mt-4"
          style="padding: 10px; font-weight: bold"
        >
          Add Product
        </button>
      </form>
    </div>

    <%- include('../common/footer.ejs') %>
  </body>
</html>
